#include<stdio.h>
int main(void)
{
int hoge=5;
int piyo=10;
int *hoge_p;
printf("&hoge...%p\n",&hoge);
printf("&hoge_p...%p\n",&hoge_p);
printf("&piyo...%p\n",&piyo);
hoge_p=&hoge;
printf("hoge_p...%p\n",hoge_p);
printf("*hoge_p...%d\n",*hoge_p);
*hoge_p=10;
printf("&hoge...%d\n",hoge);
return 0;
}



